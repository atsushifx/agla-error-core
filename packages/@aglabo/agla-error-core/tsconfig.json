{
  "extends": "../../../base/configs/tsconfig.base.json",
  "include": [
    "src/**/*.ts",
    "shared/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "src/__tests__/runtime/deno/**/*.ts",
    "src/__tests__/runtime/bun/**/*.ts"
  ],
  "compilerOptions": {
    // directories
    "declarationDir": "./maps",
    // "outDir": "./maps",
    "rootDir": "./",
    // aliases
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*",
        "/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@tests/*": [
        "tests/*"
      ]
    },
    // types
    // cache
    "incremental": true,
    "tsBuildInfoFile": ".cache/tsbuild-cache/tsBuildInfo.json"
  }
}
